<div id="map"></div>
  <script>
    function initMap() {
          //the click on the map provides you with the lat + lng coordinates
      let map;

      navigator.geolocation.getCurrentPosition(function(position) {
        const pos = {
          lat: position.coords.latitude,
          lng: position.coords.longitude
      };

      map = new google.maps.Map(document.getElementById('map'), {
        zoom: 13, //check the url to see how much zoom
        center: pos
      });

      const marker = new google.maps.Marker({
        position: pos,
        map: map
      });

      map.setCenter(pos);
      });
    }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDtSbSaGS4TQw9M0aN6j7akXUk1O8xmz84&callback=initMap">
  </script>